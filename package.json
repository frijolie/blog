{
    "name": "blog",
    "version": "0.1.0",
    "description": "A personal blog about comics and stuff",
    "main": "index.html",
    "scripts": {
        "clean": "npx rimraf public/",
        "build:sass": "sass src/css:public/css",
        "watch:sass": "sass -w --style=compressed src/css/:public/css/",
        "build:eleventy": "eleventy",
        "watch:eleventy": "eleventy --serve",
        "start": "npm-run-all clean build:sass -p watch:*",
        "build": "npm-run-all clean build:*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frijolie/blog.git"
    },
    "keywords": [
        "comics",
        "blog",
        "eleventy"
    ],
    "author": "Frijolie",
    "license": "GPL-3.0-only",
    "bugs": {
        "url": "https://github.com/frijolie/blog/issues"
    },
    "homepage": "https://github.com/frijolie/blog#readme",
    "type": "module",
    "dependencies": {
        "@11ty/eleventy": "^3.0.0",
        "@11ty/eleventy-navigation": "^0.3.5",
        "@11ty/eleventy-plugin-rss": "^2.0.2",
        "rimraf": "^6.0.1"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "sass": "^1.83.0"
    }
}
