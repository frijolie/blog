<header class="site-header">
    <h1 class="site-heading"><span class="site-title">{{ site.title }}</span></h1>
    <button id="theme-toggle" class="theme-toggle" title="Toggles light and dark mode" aria-label="light" aria-live="polite">
        <img class="theme-toggle-sun" aria-hidden="true" src="/assets/images/sun-icon.svg" decoding="async" alt="sun" width="25" height="25">
        <svg class="theme-toggle-moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 480 480" style="enable-background:new 0 0 480 480" xml:space="preserve">
            <path d="M459.782 347.328c-4.288-5.28-11.488-7.232-17.824-4.96-17.76 6.368-37.024 9.632-57.312 9.632-97.056 0-176-78.976-176-176 0-58.4 28.832-112.768 77.12-145.472 5.472-3.712 8.096-10.4 6.624-16.832S285.638 2.4 279.078 1.44C271.59.352 264.134 0 256.646 0c-132.352 0-240 107.648-240 240s107.648 240 240 240c84 0 160.416-42.688 204.352-114.176 3.552-5.792 3.04-13.184-1.216-18.496z"/>
        </svg>
    </button>
</header>
<nav class="site-nav">
    <button id="nav-toggle" type="button" aria-expanded="false" aria-label="primary navigation" aria-controls="site-nav-list">
        <svg width="24" height="24" aria-hidden="true">
            <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
        </svg>
    </button>
    <ul class="site-nav-list">
        <li class="site-nav-item">
            <a href="/" {%- if page.url == "/" -%}aria-current="page"{%- endif -%} class="site-nav-link">Home</a>
        </li>
        {%- for item in collections.pages -%}
            <li class="site-nav-item">
                <a href="{{ item.url }}" {%- if item.url == page.url -%}aria-current="page"{%- endif -%} class="site-nav-link">
                    {{ item.data.title }}
                </a>
            </li>
        {%- endfor -%}
        <li class="site-nav-item">
            <a href="https://comicmetadata.miraheze.org/wiki/Main_Page" class="site-nav-link">Wiki</a>
        </li>
    </ul>
</nav>